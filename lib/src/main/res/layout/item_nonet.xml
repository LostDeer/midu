<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:id="@+id/v_kong"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="100dp"
            >


            <ImageView
                android:layout_width="250dp"
                android:layout_height="190dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/wangluoyichang"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="网络异常,请检查网络连接"
                android:textColor="@color/black66"
                />

            <Button
                android:id="@+id/iv_noNet"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_order_button"
                android:text="点击刷新"
                android:textColor="@color/money449"
                android:textSize="15dp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="88px"
            android:src="@drawable/fanhui"
            android:padding="20px"
            android:layout_marginLeft="20px"
            />
    </RelativeLayout>
</LinearLayout>